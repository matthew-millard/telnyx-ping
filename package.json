{
  "name": "telnyx-ping",
  "version": "1.0.0",
  "description": "A React component for user appointment scheduling with Telnyx-powered SMS confirmations.",
  "main": "server/server.js",
  "scripts": {
    "start": "node server/server.js",
    "develop": "concurrently \"cd server && npm run watch\" \"cd client && npm start\"",
    "install-root": "npm i",
    "install-server": "cd server && npm i",
    "install-client": "cd client && npm i",
    "install-all": "concurrently \"npm:install-*\"",
    "test": "cd client && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/matthew-millard/telnyx-ping.git"
  },
  "author": "Matt Millard",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/matthew-millard/telnyx-ping/issues"
  },
  "homepage": "https://github.com/matthew-millard/telnyx-ping#readme",
  "dependencies": {
    "concurrently": "^8.2.2",
    "eslint": "^8.51.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3"
  }
}
